                            <input type="password" class="w-full bg-[#0a0a0a] border border-white/10 rounded-xl p-4 pr-12 text-white focus:outline-none focus:ring-2 focus:ring-blue-600/50 focus:border-blue-600 transition-all">
                            <button type="button" onclick="togglePassword(this)" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-600 hover:text-white transition-colors">
                                <i class="fa-solid fa-eye text-sm"></i>
                            </button>
                        </div>
                    </div>

                    <div id="confirm-password-field" class="space-y-2">
                        <label class="text-sm font-medium text-gray-300">Confirm Password</label>
                        <div class="relative">
                            <input type="password" class="w-full bg-[#0a0a0a] border border-white/10 rounded-xl p-4 pr-12 text-white focus:outline-none focus:ring-2 focus:ring-blue-600/50 focus:border-blue-600 transition-all">
                            <button type="button" onclick="togglePassword(this)" class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-600 hover:text-white transition-colors">
                                <i class="fa-solid fa-eye text-sm"></i>
                            </button>
                        </div>
                    </div>

                    <button type="submit" id="auth-submit-btn" class="w-full py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-bold text-lg flex items-center justify-center gap-2 transition-all hover:scale-[1.02] active:scale-[0.98] mt-4 shadow-lg shadow-blue-600/20">
                        Create Account <i class="fa-solid fa-arrow-right text-sm"></i>
                    </button>

                    <div id="forgot-password" class="text-center hidden">
                        <button type="button" class="text-blue-500 hover:text-blue-400 text-sm font-medium transition-colors">Forgot password?</button>
                    </div>

                    <div class="text-center mt-8">
                        <p class="text-gray-500 text-sm">
                            <span id="auth-switch-text">Already have an account?</span>
                            <button onclick="switchAuthMode()" id="auth-switch-btn" class="text-blue-500 hover:text-blue-400 font-semibold transition-colors ml-1">
                                Sign in
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>

        <!-- Right Pane - Visual Preview -->
        <div class="hidden md:flex flex-1 relative bg-[#050505] p-16 items-center justify-center border-l border-white/5">
            <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: radial-gradient(circle, #fff 1px, transparent 1px); background-size: 30px 30px;"></div>
            
            <div class="relative w-full max-w-lg z-10 flex flex-col items-center">
                <div class="w-full bg-[#0a0a0a] border border-white/5 rounded-[32px] p-10 shadow-3xl relative overflow-hidden group">
                    <div class="absolute top-0 left-0 w-1 h-full bg-blue-600/50"></div>
                    
                    <!-- Signup Visual Preview -->
                    <div id="signup-visual">
                        <div class="bg-black rounded-2xl p-6 border border-white/10 mb-8 relative">
                            <div class="flex items-center gap-4 mb-6">
                                <div class="w-10 h-10 rounded-full bg-blue-600/20 flex items-center justify-center animate-pulse">
                                    <div class="w-4 h-4 rounded-full bg-blue-600"></div>
                                </div>
                                <div class="h-2 w-32 bg-white/10 rounded-full"></div>
                            </div>
                            
                            <div class="space-y-3">
                                <div class="text-xs text-gray-500 uppercase tracking-widest font-bold">Trending niche found:</div>
                                <div class="text-2xl font-bold flex items-center gap-2">
                                    <span class="text-blue-500">"</span>
                                    Bodycam
                                    <span class="text-blue-500">"</span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <h3 class="text-3xl font-bold mb-4">Discover Viral Niches</h3>
                            <p class="text-gray-400 text-lg leading-relaxed">
                                Access our database of high-CPM niches and find untapped opportunities instantly.
                            </p>
                        </div>
                    </div>

                    <!-- Login Visual Preview (hidden by default) -->
                    <div id="login-visual" class="hidden">
                        <div class="bg-black rounded-2xl border border-white/10 overflow-hidden mb-8">
                            <div class="p-4 border-b border-white/5 flex justify-between items-center text-[10px] font-bold text-gray-500 uppercase tracking-wider">
                                <span>Similar Roblox Channels</span>
                                <span>Sort: Similarity</span>
                            </div>
                            <div class="p-4 space-y-4">
                                <div class="flex items-center gap-3">
                                    <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=cat" class="w-10 h-10 rounded-full bg-white/5 border border-white/10" alt="">
                                    <div class="flex-1">
                                        <div class="text-xs font-bold">Catfish Blox</div>
                                        <div class="text-[10px] text-gray-500">6.4M Subscribers</div>
                                    </div>
                                    <div class="text-[10px] font-bold px-2 py-1 rounded-full bg-green-500/10 text-green-500">
                                        98% Match
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=amy" class="w-10 h-10 rounded-full bg-white/5 border border-white/10" alt="">
                                    <div class="flex-1">
                                        <div class="text-xs font-bold">AmyyRoblox</div>
                                        <div class="text-[10px] text-gray-500">4.1M Subscribers</div>
                                    </div>
                                    <div class="text-[10px] font-bold px-2 py-1 rounded-full bg-green-500/10 text-green-500">
                                        95% Match
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=bacon" class="w-10 h-10 rounded-full bg-white/5 border border-white/10" alt="">
                                    <div class="flex-1">
                                        <div class="text-xs font-bold">RealBacon</div>
                                        <div class="text-[10px] text-gray-500">3.1M Subscribers</div>
                                    </div>
                                    <div class="text-[10px] font-bold px-2 py-1 rounded-full bg-blue-500/10 text-blue-500">
                                        92% Match
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <h3 class="text-3xl font-bold mb-4">Analyze Competition</h3>
                            <p class="text-gray-400 text-lg leading-relaxed">
                                Spy on top channels and replicate their success strategies.
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Background Glows -->
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-blue-600/10 blur-[120px] rounded-full -z-10"></div>
            </div>
        </div>
    </div>

    <script>
        // Mobile Menu Functions
        let isMobileMenuOpen = false;
        
        function toggleMobileMenu() {
            isMobileMenuOpen = !isMobileMenuOpen;
            const menu = document.getElementById('mobile-menu');
            const icon = document.getElementById('mobile-menu-icon');
            
            if (isMobileMenuOpen) {
                menu.classList.remove('opacity-0', 'pointer-events-none');
                menu.classList.add('opacity-100', 'pointer-events-auto');
                menu.style.clipPath = 'inset(0 0 0 0)';
                icon.classList.remove('fa-bars');
                icon.classList.add('fa-xmark');
            } else {
                menu.classList.add('opacity-0', 'pointer-events-none');
                menu.classList.remove('opacity-100', 'pointer-events-auto');
                menu.style.clipPath = 'inset(0 0 100% 0)';
                icon.classList.remove('fa-xmark');
                icon.classList.add('fa-bars');
            }
        }

        function closeMobileMenu() {
            if (isMobileMenuOpen) {
                toggleMobileMenu();
            }
        }

        // Scroll effect for navbar
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 20) {
                navbar.classList.remove('bg-transparent');
                navbar.classList.add('bg-black/60', 'backdrop-blur-xl', 'border-b', 'border-white/10');
            } else {
                navbar.classList.add('bg-transparent');
                navbar.classList.remove('bg-black/60', 'backdrop-blur-xl', 'border-b', 'border-white/10');
            }
        });

        // Intersection Observer for reveal animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));

        // Auth Page Navigation
        let currentAuthMode = 'signup';

        function navigateToSignup() {
            currentAuthMode = 'signup';
            document.getElementById('landing-page').classList.add('hidden');
            const authPage = document.getElementById('auth-page');
            authPage.classList.add('active');
            authPage.style.display = 'flex';
            updateAuthUI();
            window.scrollTo(0, 0);
        }

        function navigateToLogin() {
            currentAuthMode = 'login';
            document.getElementById('landing-page').classList.add('hidden');
            const authPage = document.getElementById('auth-page');
            authPage.classList.add('active');
            authPage.style.display = 'flex';
            updateAuthUI();
            window.scrollTo(0, 0);
        }

        function navigateToLanding() {
            document.getElementById('auth-page').classList.remove('active');
            document.getElementById('auth-page').style.display = 'none';
            document.getElementById('landing-page').classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        function switchAuthMode() {
            currentAuthMode = currentAuthMode === 'signup' ? 'login' : 'signup';
            updateAuthUI();
        }

        function updateAuthUI() {
            const isLogin = currentAuthMode === 'login';
            
            document.getElementById('auth-title').textContent = isLogin ? 'Welcome back' : 'Create an account';
            document.getElementById('auth-subtitle').textContent = isLogin ? 'Enter your credentials to access your account.' : 'Join thousands of creators growing their channels.';
            document.getElementById('auth-submit-btn').innerHTML = (isLogin ? 'Sign In' : 'Create Account') + ' <i class="fa-solid fa-arrow-right text-sm"></i>';
            document.getElementById('confirm-password-field').style.display = isLogin ? 'none' : 'block';
            document.getElementById('forgot-password').style.display = isLogin ? 'block' : 'none';
            document.getElementById('auth-switch-text').textContent = isLogin ? "Don't have an account?" : "Already have an account?";
            document.getElementById('auth-switch-btn').textContent = isLogin ? 'Create one now' : 'Sign in';
            
            // Toggle visual previews
            document.getElementById('signup-visual').style.display = isLogin ? 'none' : 'block';
            document.getElementById('login-visual').style.display = isLogin ? 'block' : 'none';
        }

        function togglePassword(btn) {
            const input = btn.previousElementSibling;
            const icon = btn.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Pricing Toggle
        let isAnnual = false;

        function togglePricing() {
            isAnnual = !isAnnual;
            const toggle = document.getElementById('pricing-toggle');
            const monthlyLabel = document.getElementById('monthly-label');
            const annualLabel = document.getElementById('annual-label');
            const amounts = document.querySelectorAll('.pricing-amount');
            
            if (isAnnual) {
                toggle.classList.add('translate-x-7');
                monthlyLabel.classList.remove('font-bold', 'text-white');
                monthlyLabel.classList.add('text-gray-500');
                annualLabel.classList.add('font-bold', 'text-white');
                annualLabel.classList.remove('text-gray-500');
            } else {
                toggle.classList.remove('translate-x-7');
                monthlyLabel.classList.add('font-bold', 'text-white');
                monthlyLabel.classList.remove('text-gray-500');
                annualLabel.classList.remove('font-bold', 'text-white');
                annualLabel.classList.add('text-gray-500');
            }
            
            amounts.forEach(amount => {
                amount.textContent = isAnnual ? amount.dataset.annual : amount.dataset.monthly;
            });
        }

        // FAQ Toggle
        const openFaqs = new Set();

        function toggleFaq(index) {
            const content = document.querySelector(`.faq-content-${index}`);
            const icon = document.querySelector(`.faq-icon-${index}`);
            
            if (openFaqs.has(index)) {
                openFaqs.delete(index);
                content.classList.remove('max-h-96', 'opacity-100');
                content.classList.add('max-h-0', 'opacity-0');
                icon.classList.remove('rotate-45');
            } else {
                openFaqs.add(index);
                content.classList.add('max-h-96', 'opacity-100');
                content.classList.remove('max-h-0', 'opacity-0');
                icon.classList.add('rotate-45');
            }
        }

        // Initialize first FAQ as open
        toggleFaq(0);
    </script>
</body>
</html>
